{
  "name": "q2den_{{ job_run_id }}",
  "description": "Download data from swift",
  "command": "rm -rf /data/$WORKING_DIR && mkdir -p /data/$WORKING_DIR/$OUTPUT_DIR && cd /data/$WORKING_DIR && swift-download -u $DATA_URL -o $INPUT_DIR && mv $INPUT_DIR/* $INPUT_DIR/$DATA_DIR && mv $INPUT_DIR/$DATA_DIR/sample_metadata.tsv $INPUT_DIR/ && mv $INPUT_DIR/$DATA_DIR/primers.tsv $INPUT_DIR/",
  "shell": true,
  "retries": 1,
  "cpus": 1.0,
  "mem": 500.0,
  "schedule": "R1//PT1M",
  "container": {
    "type": "DOCKER",
    "image": "quay.io/omics4food/data-io",
    "forcePullImage": true,
    "volumes": [
      {
        "containerPath": "/data",
        "hostPath": "/data",
        "mode": "RW"
      }
    ],
    "parameters": [
      {
        "key": "user",
        "value": "root"
      }
    ]
  },
  "environmentVariables": [
    { "name": "WORKING_DIR", "value": "{{ job_run_id }}" },
    { "name": "DATA_URL", "value": "http://cloud.recas.ba.infn.it:8080/v1/AUTH_cf2db2690546474f889e300445b3bf20/test-data/run_091219_and_090221.tar.gz" },
    { "name": "INPUT_DIR", "value": "input_data" },
    { "name": "DATA_DIR", "value": "emp-paired-end-sequences" },
    { "name": "OUTPUT_DIR", "value": "output_{{ job_run_id }}" }
  ]
}
