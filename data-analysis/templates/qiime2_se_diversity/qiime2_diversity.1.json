{
  "name": "{{ job_run_id }}_01_qiime2_se_create_core_metric_phylogenetic",
  "description": "Create core-metrics-phylogenetic",
  "command": "qiime diversity core-metrics-phylogenetic --i-phylogeny /data/$WORKING_DIR/$OUTPUT_DIR/rooted-tree.qza --i-table /data/$WORKING_DIR/$OUTPUT_DIR/table-dada2.qza --p-sampling-depth $SAMPLING_DEPTH --m-metadata-file /data/$WORKING_DIR/$OUTPUT_DIR/sample_metadata.tsv --output-dir /data/$WORKING_DIR/$OUTPUT_DIR/core-metrics-results 2>&1 | tee /data/$WORKING_DIR/$OUTPUT_DIR/core-metrics-phylogenetic.log",
  "shell": true,
  "retries": 1,
  "cpus": 1.0,
  "mem": 500.0,
  "schedule": "R1//PT1M",
  "parents": [
    "{{ job_run_id }}"
  ],
  "container": {
    "type": "DOCKER",
    "image": "qiime2/core:2019.10",
    "forcePullImage": true,
    "volumes": [
      {
        "containerPath": "/data",
        "hostPath": "/data",
        "mode": "RW"
      }
    ],
    "parameters": [
      {
        "key": "user",
        "value": "root"
      }
    ]
  },
  "environmentVariables": [
    { "name": "WORKING_DIR", "value": "{{ job_run_id }}" },
    { "name": "INPUT_DIR", "value": "input_data" },
    { "name": "DATA_DIR", "value": "emp-single-end-sequences" },
    { "name": "OUTPUT_DIR", "value": "output_{{ job_run_id }}" },
    { "name": "SAMPLING_DEPTH", "value": "10" }
  ]
}
