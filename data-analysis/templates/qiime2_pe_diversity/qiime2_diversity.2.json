{
  "name": "q2div_{{ job_run_id }}_02_qiime2_pe_feature_classifier",
  "description": "Feature classifier with vsearch",
  "command": "wget $REFERENCE_READS_URL -P /data/$WORKING_DIR/$INPUT_DIR && wget $REFERENCE_TAXONOMY_URL -P /data/$WORKING_DIR/$INPUT_DIR && qiime feature-classifier classify-consensus-vsearch --i-query /data/$WORKING_DIR/$OUTPUT_DIR/rep-seqs.qza --i-reference-reads /data/$WORKING_DIR/$INPUT_DIR/$REFERENCE_READS --i-reference-taxonomy /data/$WORKING_DIR/$INPUT_DIR/$REFERENCE_TAXONOMY --p-threads $P_THREADS --o-classification /data/$WORKING_DIR/$OUTPUT_DIR/taxonomy.qza",
  "shell": true,
  "retries": 1,
  "cpus": 4.0,
  "mem": 6000.0,
  "schedule": "R1//PT1M",
  "parents": [
    "q2div_{{ job_run_id }}_01_qiime2_pe_create_core_metric_phylogenetic"
  ],
  "container": {
    "type": "DOCKER",
    "image": "qiime2/core:2019.10",
    "forcePullImage": true,
    "volumes": [
      {
        "containerPath": "/data",
        "hostPath": "/data",
        "mode": "RW"
      }
    ],
    "parameters": [
      {
        "key": "user",
        "value": "root"
      }
    ]
  },
  "environmentVariables": [
    { "name": "WORKING_DIR", "value": "{{ job_run_id }}" },
    { "name": "INPUT_DIR", "value": "input_data" },
    { "name": "DATA_DIR", "value": "emp-paired-end-sequences" },
    { "name": "OUTPUT_DIR", "value": "output_{{ job_run_id }}" },
    { "name": "REFERENCE_READS", "value": "silva-138-99-seqs.qza" },
    { "name": "REFERENCE_READS_URL", "value": "http://cloud.recas.ba.infn.it:8080/v1/AUTH_cf2db2690546474f889e300445b3bf20/qiime2-reference-data/silva-138-99-seqs.qza" },
    { "name": "REFERENCE_TAXONOMY", "value": "silva-138-99-tax.qza" },
    { "name": "REFERENCE_TAXONOMY_URL", "value": "http://cloud.recas.ba.infn.it:8080/v1/AUTH_cf2db2690546474f889e300445b3bf20/qiime2-reference-data/silva-138-99-tax.qza" },
    { "name": "P_THREADS", "value": "5" }
  ]
}
